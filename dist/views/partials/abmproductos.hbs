<body style="background-color: #d1ffe2;">
  <BR>
    <table border="1" align="center">
      <theader>
        <th >Articulo</th>
        <th >Nombre</th>
        <th >Precio</th>
        <th >Editar</th>
        <th >Eliminar</th>
      </theader>
        {{#each productos}}
        <form action="../admin/update" method="post">
            <tr>
              <input class="form-control" style="display:none;" type="text" name="id" value="{{id}}"></td>                
              <td align="center">{{id}}</td>              
              <td align="center"><input class="form-control" type="text" name="nombre" value="{{nombre}}" required></td>
              <td align="center"><input class="form-control" type="number" step="0.01" name="precio" value="{{precio}}" required></td>
              <td align="center"><button class="btn btn-primary btn-block">Cambiar</button> </td>              
              <td align="center"><a class="btn btn-danger" href="/admin/delete/{{id}}">Eliminar</a></td>              
            </tr>
          </form>
        {{else}}
          <tr>
            <td colspan="4">No hay mas filas</td>
          </tr>
        {{/each}}
    </table>

<form action="../admin/agregarproducto" method="POST">
