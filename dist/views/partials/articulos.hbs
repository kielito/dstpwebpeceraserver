<body style="background-color: #d1ffe2;">
  <BR>
    <table border="1" align="center">
      <theader>
        <th >Articulo</th>
        <th >Nombre</th>
        <th >Precio</th>
        <th >Cantidad</th>
        <th >Comprar</th>
      </theader>
        {{#each articulo}}
          <form action="/articulo/carrito" method="POST">
            <tr>                    
              <td align="center"><input type="number" name="id" readonly value="{{id}}"></td>
              <td align="center"><input type="text" name="nombre" readonly value="{{nombre}}"></td>
              <td align="center"><input type="number" name="precio" readonly value="{{precio}}"></td>
              <td align="center"><input type="number" name="cantidad" class="form-control" value="1" autofocus></td>       
              <td align="center"><button class="btn btn-danger">Agregar al carrito</button></td>
            </tr>
          </form>
        {{else}}
          <tr>
            <td colspan="4">No hay mas filas</td>
          </tr>
        {{/each}}
    </table>
    <div align="center">  
      <BR>    
      <button class="btn btn-info" onclick="window.location.href='/user/home'">Volver</button>        
      <button class="btn btn-success" onclick="window.location.href='/compra/carrito'">Ver Carrito</button>        
    </div>
<div align="center">
  <BR>  
  <button class="btn btn-danger" onclick="window.location.href='/user/salir'">Salir</button>
</div>
</body>