<body style="background-color: #d1ffe2;">
  <form action="../articulo/listar" method="post">
  <BR>
    <table border="1" align="center">
      <theader>
        <th >Articulo</th>
        <th >Descripción</th> 
        <th >Precio</th>
        <th >Cantidad</th>
        <th >Subtotal</th>
      </theader>
          {{#each compra}}
          <tr>
            <td align="center">{{id}}</td>
            <td align="center">{{nombre}}</td>
            <td align="center">{{precio}}</td>
            <td align="center">{{cantidad}}</td>            
            <td align="center">{{subtotal}}</td>
          </tr>
          {{else}}
          <tr>
            <td colspan="5">Tu carrito está vacío!</td>
          </tr>
          {{/each}}
          <tr class="total">
            <th class="total" colspan="4" align="center">Total</th>
            {{#if total}}
              <td align="center">{{total}}</td>
            {{else}}
              <td align="center" >0</td>
            {{/if}}      
          </tr>     
    </table>
</form>

<form action="../compra/compra" method="POST">
    <div align="center">
      <BR>
      <div align="center">
        <h4>Dirección de Entrega</h4>
      </div>
        
        <input type="text" name="calle" placeholder="Calle" required>
        <input type="text" name="altura" placeholder="Altura" required>
        {{#if compra}}
          <button class="btn btn-success">Confirmar Compra</button>
        {{else}}
          <button class="btn btn-success" disabled>Confirmar Compra</button>
        {{/if}}
    </div>    
</form>
<div align="center">
  <BR>
    <button class="btn btn-info" onclick="window.location.href='/articulo/listar'">Volver</button>
    
</div>
<div align="center">
  <BR>    
    <button class="btn btn-danger" onclick="window.location.href='/user/salir'">Salir</button>
</div>
</body>